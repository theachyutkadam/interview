<table class="table table-hover">
  <thead>
    <tr>
      <th>#ID</th>
      <th>Description</th>
      <th>User</th>
      <th>Post</th>
      <th colspan="3"><%=link_to "Back", posts_path, class: "btn btn-secondary"%></th>
    </tr>
    <tbody>
      <%@comments.each do |comment|%>
        <tr>
          <td><%=comment.id%></td>
          <td><%=comment.description%></td>
          <td><%=comment.user.email%></td>
          <td><%=comment.post.title%></td>
          <td><%=link_to "Edit", edit_comment_path(comment, :post_id => comment.post.id), class: "btn .btn-info"%></td>
          <td><%= link_to 'Destroy', comment_path(comment),
            data: {:confirm => 'Are you sure?'}, :method => :delete %></td>
        </tr>
      <%end%>
    </tbody>
  </thead>
</table>