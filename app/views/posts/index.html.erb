<table class="table table-hover">
  <thead style='border: 1px solid #900'>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"><%=link_to "New Post", new_post_path, class: "btn .btn-info"%></th>
    </tr>
    <tbody>
      <%@posts.each do |post|%>
        <tr>
          <h2><%= post.title %></h2>
            <p>Tags: <%= raw post.tags.map(&:name).map { |t| link_to t }.join(', ') %></p>
            <p>Description:- <%=post.description%></p>
            <p>User:- <%=post.user.email%></p>
            Action:- <%=link_to "Edit", edit_post_path(post), class: "btn .btn-info"%>
              &nbsp;&nbsp;<%=link_to "add comments", new_comment_path(:post_id => post.id), class: "btn .btn-info"%>
              &nbsp;&nbsp;<%= link_to 'Destroy', post_path(post), data: {:confirm => 'Are you sure?'}, :method => :delete %></h5>
        </tr>
      <%end%>
    </tbody>
  </thead>
</table>