<table class="table table-hover">
  <thead>
    <tr>
      <th>#ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"><%=link_to "New Post", new_post_path, class: "btn .btn-info"%></th>
    </tr>
    <tbody>
      <%@posts.each do |post|%>
        <tr>
          <td><%=post.id%></td>
          <td><%=post.title%></td>
          <td><%=post.description%></td>
          <td><%=post.user.email%></td>
          <td><%=link_to "Edit", edit_post_path(post), class: "btn .btn-info"%></td>
          <td><%=link_to "add comments", new_comment_path(:post_id => post.id), class: "btn .btn-info"%></td>
          <td><%= link_to 'Destroy', post_path(post),
            data: {:confirm => 'Are you sure?'}, :method => :delete %></td>
        </tr>
      <%end%>
    </tbody>
  </thead>
</table>